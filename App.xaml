<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:weather_App"
             xmlns:converters="clr-namespace:weather_App.Converters"
             x:Class="weather_App.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:NotNullConverter x:Key="NotNullConverter" />
            
            <!-- Colors -->
            <Color x:Key="PrimaryColor">#1E88E5</Color>
            <Color x:Key="SecondaryColor">#0D47A1</Color>
            <Color x:Key="AccentColor">#B3E5FC</Color>
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
